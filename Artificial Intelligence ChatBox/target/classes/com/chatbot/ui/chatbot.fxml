<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chatbot.ui.ChatBotController">
   <top>
      <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #007bff; -fx-padding: 15;">
         <Label text="AI Chatbot" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
      </HBox>
   </top>
   <center>
      <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab text="Chat">
               <VBox>
                  <ScrollPane fx:id="chatScrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                     <VBox.vgrow>ALWAYS</VBox.vgrow>
                     <VBox fx:id="chatContainer" />
                  </ScrollPane>
                  <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #ffffff;">
                     <TextField fx:id="userInputField" promptText="Type your message here...">
                        <HBox.hgrow>ALWAYS</HBox.hgrow>
                     </TextField>
                     <Button fx:id="sendButton" text="Send" onAction="#sendMessage" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;" />
                     <Button fx:id="clearButton" text="Clear" onAction="#clearChat" style="-fx-background-color: #6c757d; -fx-text-fill: white;" />
                  </HBox>
               </VBox>
            </Tab>
            <Tab text="Train Bot">
               <VBox spacing="15" style="-fx-padding: 20;">
                  <Label text="Add New FAQ" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                  <Label text="Question:" />
                  <TextField fx:id="trainQuestionField" promptText="Enter the question..." />
                  <Label text="Answer:" />
                  <TextArea fx:id="trainAnswerArea" promptText="Enter the answer..." prefRowCount="5" wrapText="true" />
                  <Button fx:id="trainButton" text="Train Bot" onAction="#trainBot" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200;" />
               </VBox>
            </Tab>
            <Tab text="Manage FAQs">
               <VBox spacing="10" style="-fx-padding: 20;">
                  <Label text="Existing FAQs" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                  <ListView fx:id="faqListView">
                     <VBox.vgrow>ALWAYS</VBox.vgrow>
                  </ListView>
                  <Button fx:id="deleteFAQButton" text="Delete Selected FAQ" onAction="#deleteFAQ" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold;" />
               </VBox>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>

